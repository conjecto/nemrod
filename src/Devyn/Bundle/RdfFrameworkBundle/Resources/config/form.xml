<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="form.type.resource_form.class">Devyn\Component\Form\Extension\Core\Type\ResourceFormType</parameter>
        <parameter key="form.type.resource.class">Devyn\Component\Form\Extension\Core\Type\ResourceType</parameter>
    </parameters>

    <services>
        <service id="form.type.resource_form" class="%form.type.resource_form.class%">
            <argument type="service" id="ral.namespace_registry"/>
            <tag name="form.type" alias="resource_form" />
        </service>
        <service id="form.type.resource" class="%form.type.resource.class%">
            <argument type="service" id="rm"/>
            <tag name="form.type" alias="resource" />
        </service>
    </services>
</container>
